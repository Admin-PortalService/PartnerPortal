@model IEnumerable<TestWebApplication.Models.ViewModels.Users>

@foreach (var item in Model)
{
    <div class="card-header bg-white list-row">
        <div class="user-block">
            <a asp-action="Edit" asp-route-id="@item.UserID">
                <div class="circleImageText"
                 style="background-color: @(String.Format("#{0:X6}", new Random().Next(0X1000000))) !important">
                  @*   @item.UserName.Substring(0,1).ToUpper() *@
                    @item.FirstName.Substring(0,1).ToUpper()
                    @item.LastName.Substring(0,1).ToUpper()
                    @*@item.Name?.FirstOrDefault)*@
                </div>
                <div class="info-box-content">
                    @* <span class="username">@Html.DisplayFor(modelItem => item.UserName)</span> *@
                    <span class="username">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</span>
@*                     <span class="username">@Html.DisplayFor(modelItem => item.LastName)</span>
 *@                </div>
            </a>
        </div>

        <div class="card-tools">
            @*<a asp-action="Edit" asp-route-id="@item.UserID"><span class="description2"><i>More Details</i></span></a>*@
            <button type="button" class="btn btn-tool btnDelete" data-card-widget="remove" data-toggle="modal" data-target="#modal-delete-confirm" data-id="@item.UserID">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>

}