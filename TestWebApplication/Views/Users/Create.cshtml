@model TestWebApplication.Models.ViewModels.Users
@{

    Layout = "_AdminLTE";
}
<html>
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <form asp-action="Create" method="post">
            <div class="wrapper">
                <!-- Content Wrapper. Contains page content -->
                <!-- Content Header (Page header) -->
                 
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Create User</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Users" asp-action="Index">Index</a></li>
                                    <li class="breadcrumb-item active">Create User</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                @if (@ViewBag.msgList != null)
                @foreach (var msg in @ViewBag.msgList)
                {

                    {
                        <div class="alert alert-warning alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    @msg.ToString()
                        </div>
                    }
                }

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <!-- SELECT2 EXAMPLE -->
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">User Form</h3>
                                @*<div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-remove"></i></button>
                                </div>*@
                            </div>
                            <div class="card-body">
                               @*  <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">User Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="UserName" data-placeholder="User Name">
                                    </div>
                                </div> *@
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">First Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="FirstName" data-placeholder="First Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Last Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="LastName" data-placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">User Mail</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="Email" data-placeholder="User Mail">
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">User Role</label>
                                    <div class="col-sm-10">
                                        @*<select class="form-control select2" multiple="multiple" data-placeholder="Select Role" name="RoleID" asp-items="@(new SelectList(@ViewBag.RoleList,"RoleID","RoleType"))" style="width: 100%;">*@
                                        <select class="form-control" data-placeholder="Select Role" name="RoleID" asp-items="@(new SelectList(@ViewBag.RoleList,"RoleID","RoleDesc"))" style="width: 100%;">
                                            </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Job Level</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" data-placeholder="Select Job Level" name="Levels" asp-items="@(new SelectList(@ViewBag.LevelList,"Level","Level"))" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Active From</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control float-right" name="ActiveFr" data-placeholder="dd-MMM-yyyy">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Active To</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control float-right" name="ActiveTo" data-placeholder="dd-MMM-yyyy">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2"></label>
                                    <!-- radio -->
                                    <div class="col-sm-4">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" id="customCheckbox2" name="IsActive" value="True">
                                            <label for="customCheckbox2" class="custom-control-label">Active</label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <input type="hidden" name="CreatedBy" value="@User.Identity?.Name" />
                    <input type="hidden" name="ModifiedBy" value="@User.Identity?.Name" />
                </section>

               
                <!-- /.content -->
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-info float-right">Save & Next</button>
            </div>
            
        </form>
       
    </div>
    @section Scripts {
            @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            
            }
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>

</body>
</html>