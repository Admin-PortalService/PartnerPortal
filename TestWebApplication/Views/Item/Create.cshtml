@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model TestWebApplication.Models.ViewModels.Item
@{

    Layout = "_AdminLTE";
}@{
}

<html>
<head>

    <title>Create Item</title>

</head>
<body class="hold-transition sidebar-mini">
    <form asp-action="Create" method="post">
        <div class="wrapper">
            <!-- Content Wrapper. Contains page content -->
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Item Input</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-area="" asp-controller="Item" asp-action="Index">Index</a></li>
                                <li class="breadcrumb-item active">Item</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            @if (@ViewBag.msgList != null)
                @foreach (var msg in @ViewBag.msgList)
                {

                    {
                        <div class="alert alert-warning alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                            @msg.ToString()
                        </div>
                    }
                }

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Item Form</h3>

                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Item Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="ItemName" data-placeholder="Item Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Item Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="ItemDes" data-placeholder="Item Description">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Remark</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Remark" data-placeholder="Remark">
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </section>
            <!-- /.content -->
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info float-right">Save</button>
        </div>
        
    </form>


</body>
</html>