@model TestWebApplication.Models.ViewModels.Item
@{

    Layout = "_AdminLTE";
}

<html>
<head>

    <title>Item Details</title>

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <a asp-action="Index" class="btn btn-outline-primary">Back</a>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-area="" asp-controller="Item" asp-action="Index">Index</a></li>
                            <li class="breadcrumb-item active">Details</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- / .container fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div id="mainElement">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Item - Details</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ItemName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ItemDes)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ItemDes)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Remark)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Remark)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Index" class="btn btn-outline-primary mr-1">Cancel</a>
                            <a asp-action="Edit" asp-controller="Item" asp-route-id="@Model.ItemId" class="btn btn-primary float-right">Edit</a>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>