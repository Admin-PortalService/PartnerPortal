@model IEnumerable<TestWebApplication.Models.ViewModels.FilterMdl>
@{

    Layout = "_AdminLTE";
}
<html>
<head>
   
    <title>Incident Report</title>
    
</head>
<body class="hold-transition sidebar-mini">
    <form asp-action="IncidentDtlReport" method="post">
        <div class="wrapper">
            <!-- Content Wrapper. Contains page content -->
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                            <h1>Incident Report</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active">Report</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>
                       
                    <div class="container-fluid">
                        <!-- SELECT2 EXAMPLE -->
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Status</label>
                                    <div class="col-sm-4">
                                    <select class="form-control"  style="width: 100%;" name="Status" onChange="combo(this, 'Status')" required>
                                        <option value="All" selected="selected">All</option>
                                        <option value="Open">Open</option>
                                        <option value="InProgress">InProgress</option>
                                        <option value="Solved">Solved</option>
                                        <option value="Closed">Closed</option>
                                        <option value="Cancel">Cancel</option>
                                    </select>
                                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">From</label>
                    <div class="col-sm-4">
                    <div class="input-group">
                            <input type="date" class="form-control float-right" id="reservation" name="FromDate">
                    </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">To</label>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <input type="date" class="form-control float-right" id="reservation" name="ToDate">
                        </div>
                    </div>
                </div>
            </div>
        <!-- /.content -->


    
        <div class="card-footer">
             <div class="col-sm-6">
            @*<a asp-action="IncidentDtlReport" asp-controller="IncReport" class="btn  btn-info float-right">*@
                    <button type="submit" class="btn btn-info float-right"> Show result </button>
            
 
              
        </div>
      
        </div>
        </div>
        </form>

   @section Scripts {
        <script>
        $(function () {

            $('#reservation').daterangepicker()
        })

    </script>
   }
</body>
</html>


