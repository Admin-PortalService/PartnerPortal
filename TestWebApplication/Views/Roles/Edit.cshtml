@model TestWebApplication.Models.ViewModels.Roles
@using Microsoft.AspNetCore.Identity
@{

    Layout = "_AdminLTE";
}

<!DOCTYPE html>
<html>
<head>
    
    <title>Roles Setup Form</title>
   
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
    <form asp-action="Edit" method="post">
        <div class="wrapper">
            <!-- Content Wrapper. Contains page content -->
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Edit Roles Setup</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-area="" asp-controller="Roles" asp-action="Index">Index</a></li>
                                <li class="breadcrumb-item active">Edit Roles Setup</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <!-- SELECT2 EXAMPLE -->
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Roles Setup Form</h3>
                                @*<div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-remove"></i></button>
                                </div>*@
                            </div>
                            <div class="card-body">
                                <input type="hidden" asp-for="RoleID" />
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Role Type</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="RoleType" data-placeholder="Role Type">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Role Description</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="RoleDesc" data-placeholder="Role Description">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2">Organization</label>
                                    <!-- radio -->
                                    <div class="col-sm-10">
                                        <div class="icheck-primary d-inline">
                                            <input type="radio" id="radioPrimary1" class="form-control" asp-for="IsInternal" value="true" checked>
                                            <label for="radioPrimary1">
                                                Internal
                                            </label>
                                        </div>
                                        <div class="icheck-primary d-inline">
                                            <input type="radio" id="radioPrimary2" class="form-control" asp-for="IsInternal" value="false">
                                            <label for="radioPrimary2">
                                                External
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2"></label>
                                    <!-- radio -->
                                    <div class="col-sm-4">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" id="customCheckbox2" asp-for="IsActive" value="true" checked>
                                            <label for="customCheckbox2" class="custom-control-label">Active</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="CreatedOn" />
                <input type="hidden" name="ModifiedBy" value="@User.Identity?.Name" />
                <input type="hidden" asp-for="ModifiedOn" />
                </div>
                </section>
                <!-- /.content -->
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-info float-right">Save</button>
            </div>
        </form>
    </div>
   
</body>
</html>

