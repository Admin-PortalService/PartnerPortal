@model IEnumerable<TestWebApplication.Models.ViewModels.IssueType>

@foreach (var item in Model)
{
        <div class="card-header bg-white list-row">
            <div class="user-block">
            <a asp-action="Edit" asp-route-id="@item.IssueTypeID">
                    <div class="circleImageText"
                 style="background-color: @(String.Format("#{0:X6}", new Random().Next(0X1000000))) !important">
                    @item.IssueTypeName.Substring(0,1).ToUpper()
                    </div>
                    <div class="info-box-content">
                    <span class="username">@Html.DisplayFor(modelItem => item.IssueTypeName)</span>
                </div> </a>
            </div>
              <div class="card-tools" style="line-height:40px">
            <button type="button" class="btn btn-tool btnDelete" data-card-widget="remove" data-toggle="modal" data-target="#modal-delete-confirm" data-id="@item.IssueTypeID">
                <i class="fas fa-trash"></i>
            </button>
         
            </div>
        </div>

}

