@model IEnumerable<TestWebApplication.Models.Projects>
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
<div class="container">
    <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Create">Add</a>
    <ul class="responsive-table">
        <li class="table-header">
            <div class="col col-1">Project Name</div>
            <div class="col col-2">Project Description</div>
            <div class="col col-3">Created By</div>
            <div class="col col-4">Created On</div>
            <div class="col col-5">Updated By</div>
            <div class="col col-6">Updated On</div>
        </li>

        <li class="table-row">
            @foreach (var obj in Model)
            {


                <div class="col col-1" data-label="Project Name">@obj.ProjectName</div>
                <div class="col col-2" data-label="Project Description">@obj.ProjectDesc</div>
                <div class="col col-3" data-label="Created By">Guid.TryParse(@obj.CreatedBy)</div>
                <div class="col col-4" data-label="Created On">@obj.CreatedOn</div>
                <div class="col col-5" data-label="Updated By">@obj.ModifiedBy</div>
                <div class="col col-6" data-label="Updated On">@obj.ModifiedOn</div>
                <div class="col col-7">
                    <a class="btn btn-sm btn-warning" asp-controller="Projects" asp-action="Edit" asp-route-itemid="@obj.ProjectId">Edit</a>
                    <a class="btn btn-sm btn-warning" asp-controller="Projects" asp-action="Delete" asp-route-itemid="@obj.ProjectId">Delete</a>
                </div>

            }
        </li>

    </ul>

</div>